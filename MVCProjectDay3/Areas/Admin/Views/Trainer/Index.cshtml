@{
   int order=1;
}
<table class="table">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">Actions</th>
          
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <th scope="row">@(order++)</th>
                <td>Name</td>
                <td>
                    <a class="btn btn-primary" asp-action="Create"></a>
                </td>
            </tr>
        }
       
    </tbody>
</table>